<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-7 offset-2">
            <br><br>
            <h3>Edit your Listing :</h3>
            <br>
    <form method="POST" action="/listings/<%= list._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" value="<%= list.title %>" name="listing[title]" required>
            <div class="invalid-feedback">Please enter a valid Title</div>
        </div>
        <br>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input type="text" class="form-control" value="<%= list.description %>" name="listing[description]" required>
            <div class="invalid-feedback">Please enter a valid Description</div>
        </div>
        <br>
        <div class="mb-3">
            Original Image <br>
            <img src="<%= originalImageUrl %>" style="border-radius: 1rem;">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="file" class="form-control" value="<%= list.image.url %>" name="listing[image]">
        </div>
        <br>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="text" class="form-control" value="<%= list.price %>" name="listing[price]" required>
                <div class="invalid-feedback">Please enter a valid Price</div>
            </div>
            <br>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" class="form-control" value="<%= list.country %>" name="listing[country]" required>
                <div class="invalid-feedback">Country should be valid</div>
            </div>
            <br>
        </div>
        <br>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" class="form-control" value="<%= list.location %>" name="listing[location]" required>
            <div class="invalid-feedback">Please enter a valid Location</div>
        </div>
        <br>

        <button class="btn btn-dark edit-btn">Edit</button>
        <br><br><br>
    </form>
        </div>
    </div>
</body>


